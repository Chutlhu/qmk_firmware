// enum custom_keycodes {
//   BASE = SAFE_RANGE,
//   NUM,
//   NAV,
//   SYM,
//   FUN,
// };

#define _BASE 0
#define _NUM  1
#define _NAV  2
#define _SYM  3
#define _FUN  4

#define NAK  KC_NO

// Left-hand home row mods
#define HOME_A LCTL_T(KC_A)
#define HOME_O LALT_T(KC_O)
#define HOME_E LGUI_T(KC_E)
#define HOME_U LSFT_T(KC_U)

// Right-hand home row mods
#define HOME_H RSFT_T(KC_H)
#define HOME_T RGUI_T(KC_T)
#define HOME_N LALT_T(KC_N)
#define HOME_S RCTL_T(KC_S)

// FUN for MAC
#define KC_CUT KC_F22
#define KC_CPY KC_F23
#define KC_PST KC_F24
#define KC_UNDO KC_F20
#define KC_REDO KC_F21

// Layers activation
#define ESC_NUM LT(_NUM,KC_ESC)  // NUM
#define SPC_NAV LT(_NAV,KC_SPC)  // NAV
// #define TAB_NAN LT(NAN,KC_TAB)  // NAN
// #define BSP_NAN LT(NAN,KC_BSPC) // NAN
#define ENT_SYM LT(_SYM,KC_ENT)  // SYM
#define DEL_FUN LT(_FUN,KC_DEL)  // FUN


const uint16_t PROGMEM keymaps[][MATRIX_ROWS][MATRIX_COLS] = {

  /* Dvorak
   * ,----------------------------------------------------------------------------------------------------------------------.
   * |  `~  |  :;  |  ,<  |  .>  |   P  |   Y  |  [{  |                    |  ]}  |   F  |   G  |   C  |   R  |   L  |  =+  |
   * |------+------+------+------+------+------+------+--------------------+------+------+------+------+------+------+------|
   * |  =+  |   A  |   O  |   I  |   E  |   U  |   (  |                    |   )  |   D  |   H  |   T  |   N  |   S  |  -_  |
   * |------+------+------+------+------+------+---------------------------+------+------+------+------+------+------+------|
   * | CAPS |  '"  |   Q  |   J  |   K  |   X  |  F23 |                    |  F24 |   B  |   M  |   W  |   V  |   Z  |  /?  |
   * |-------------+------+------+------+------+------+------+------+------+------+------+------+------+------+-------------|
   * |      |      |      |      ||||||||EscNUM|SpcNAV|TabNAN||||||||BspNAN|EntSYM|DelFUN||||||||      |      |      |  \|  |
   * ,----------------------------------------------------------------------------------------------------------------------.
   */
  [_BASE] = LAYOUT(
    KC_GRV,  KC_SCLN, KC_COMM, KC_DOT, KC_P,   KC_Y,    KC_LBRC,                           KC_RBRC, KC_F,    KC_G,   KC_C,   KC_R,   KC_L,   KC_SLSH, 
		KC_SLSH, HOME_A,  HOME_O,  HOME_E, HOME_U, KC_I,    KC_LPRN,                           KC_RPRN, KC_D,    HOME_H, HOME_T, HOME_N, HOME_S, KC_MINS, 
		KC_CAPS, KC_QUOT, KC_Q,    KC_J,   KC_K,   KC_X,    KC_F23,                            KC_F24,  KC_B,    KC_M,   KC_W,   KC_V,   KC_Z,   KC_SLSH, 
		NAK,     NAK,     NAK,     NAK,            ESC_NUM, SPC_NAV,  KC_TAB,       KC_BSPC,  ENT_SYM, DEL_FUN,         NAK,    NAK,    NAK,    KC_BSLS
  ),

  /* NUM
   * ,----------------------------------------------------------------------------------------------------------------------.
   * |      |      |      |      |      |      |      |                    |      |   /  |   7  |   8  |   9  |   *  |      |
   * |------+------+------+------+------+------+------+--------------------+------+------+------+------+------+------+------|
   * |      |      | Ctrl | Alt  | Gui  | Shift|      |                    |      |   =  |   4  |   5  |   6  |   -  |      |
   * |------+------+------+------+------+------+---------------------------+------+------+------+------+------+------+------|
   * |      |      |      |      |      |      |      |                    |      |      |   1  |   2  |   3  |   +  |      |
   * |-------------+------+------+------+------+------+------+------+------+------+------+------+------+------+-------------|
   * |      |      |      |      ||||||||(HOLD)|      |      |||||||| BKSP | ENT  | DEL  ||||||||   0  |  .   |      |      |
   * ,----------------------------------------------------------------------------------------------------------------------.
   */
  [_NUM] = LAYOUT(
    NAK,  NAK,     NAK,     NAK,     NAK,     NAK,     NAK,                   NAK,    KC_PSLS, KC_P7,  KC_P8,  KC_P9,   KC_PAST, NAK,
    NAK,  KC_LCTL, KC_LALT, KC_LGUI, KC_LSFT, NAK,     NAK,                   NAK,    KC_PEQL, KC_P4,  KC_P5,  KC_P6,   KC_PMNS, NAK,
    NAK,  NAK,     NAK,     NAK,     NAK,     NAK,     NAK,                   NAK,    NAK,     KC_P1,  KC_P2,  KC_P3,   KC_PPLS, NAK,
    NAK,  NAK,     NAK,     NAK,              KC_TRNS, NAK,  NAK,    KC_BSPC, KC_ENT, KC_DEL,          KC_P0,  KC_PDOT, KC_ENT,  NAK 
  ),

  /* NAV
   * ,----------------------------------------------------------------------------------------------------------------------.
   * |      |      |      |      |      |      |      |                    |      | HOME | PGDN | PGUP |  END |      |      |
   * |------+------+------+------+------+------+------+--------------------+------+------+------+------+------+------+------|
   * |      |      | Ctrl | Alt  | Gui  | Shift|      |                    |      | LEFT | DOWN |  UP  | RIGHT|      |      |
   * |------+------+------+------+------+------+---------------------------+------+------+------+------+------+------+------|
   * |      |      |      |      |      |      |      |                    |      | CUT  | COPY | PASTE| UNDO | REDO |      |
   * |-------------+------+------+------+------+------+------+------+------+------+------+------+------+------+-------------|
   * |      |      |      |      ||||||||      |(HOLD)|      |||||||| BKSP |  ENT |  DEL ||||||||      |      |      |      |
   * ,----------------------------------------------------------------------------------------------------------------------.
   */
  [_NAV] = LAYOUT(
    NAK,  NAK,     NAK,     NAK,     NAK,     NAK,    NAK,                       NAK,    KC_HOME, KC_PGDN, KC_PGUP, KC_END,    KC_PAST, NAK,
    NAK,  KC_LCTL, KC_LALT, KC_LGUI, KC_LSFT, NAK,    NAK,                       NAK,    KC_LEFT, KC_DOWN, KC_UP,   KC_RGHT,   KC_PMNS, NAK,
    NAK,  NAK,     NAK,     NAK,     NAK,     NAK,    NAK,                       NAK,    KC_HOME, KC_PGDN, KC_PGUP, KC_END,    KC_PAST, NAK,
    NAK,  NAK,     NAK,     NAK,              NAK,    KC_TRNS,  NAK,    KC_BSPC, KC_ENT, KC_DEL,           NAK,     NAK,       NAK,     NAK 
  ),

  /* SYM
   * ,----------------------------------------------------------------------------------------------------------------------.
   * |   ~  |   !  |   @  |   #  |   $  |  %   |   ^  |                    |   &  |   *  |      |      |      |      |      |
   * |------+------+------+------+------+------+------+--------------------+------+------+------+------+------+------+------|
   * |      |      |      |      |      |      |      |                    |      | Shift| Gui  | Alt  | Ctrl |      |      |
   * |------+------+------+------+------+------+---------------------------+------+------+------+------+------+------+------|
   * |      |      |      |      |      |      |      |                    |      |      |      |      |      |      |      |
   * |-------------+------+------+------+------+------+------+------+------+------+------+------+------+------+-------------|
   * |      |      |      |      |||||||| ESC  | SPC  | TAB  ||||||||      |(HOLD)|      ||||||||      |      |      |      |
   * ,----------------------------------------------------------------------------------------------------------------------.
   */
  [_SYM] = LAYOUT(
    NAK,  NAK,  NAK,     NAK,     NAK,     NAK,     NAK,                        NAK,     NAK,     NAK,     NAK,     NAK,     NAK,     NAK,
    NAK,  NAK,  NAK,     NAK,     NAK,     NAK,     NAK,                        NAK,     KC_LSFT, KC_LGUI, KC_LALT, KC_LCTL, KC_PMNS, NAK,
    NAK,  NAK,  NAK,     NAK,     NAK,     NAK,     NAK,                        NAK,     NAK,     NAK,     NAK,     NAK,     NAK,     NAK,
    NAK,  NAK,  NAK,     NAK,              KC_ESC,  KC_SPC, KC_TAB,    KC_BSPC, KC_TRNS, KC_DEL,           NAK,     NAK,     NAK,   NAK 
  ),

  /* FUN
   * ,----------------------------------------------------------------------------------------------------------------------.
   * |      |  F1  |  F2  |  F3  |  F5  |  F6  |      |                    |  F7  |  F8  |  F9  |  F10 |  F11 |  F12 |      |
   * |------+------+------+------+------+------+------+--------------------+------+------+------+------+------+------+------|
   * |      |      |  CUT | COPY | PASTE|      | Vol+ |                    | Mute | Shift| Gui  | Alt  | Ctrl |      |      |
   * |------+------+------+------+------+------+---------------------------+------+------+------+------+------+------+------|
   * |      |      |      |      |      |      | Vol- |                    | Play |      |      |      |      |      |      |
   * |-------------+------+------+------+------+------+------+------+------+------+------+------+------+------+-------------|
   * |      |      |      |      |||||||| ESC  | SPC  | TAB  ||||||||      |      |(HOLD)||||||||      |      |      |      |
   * ,----------------------------------------------------------------------------------------------------------------------.
   */
  [_FUN] = LAYOUT(
    NAK,  NAK,  NAK,     NAK,     NAK,     NAK,     NAK,                        NAK,     NAK,     NAK,     NAK,     NAK,     NAK,     NAK,
    NAK,  NAK,  NAK,     NAK,     NAK,     NAK,     NAK,                        NAK,     KC_LSFT, KC_LGUI, KC_LALT, KC_LCTL, KC_PMNS, NAK,
    NAK,  NAK,  NAK,     NAK,     NAK,     NAK,     NAK,                        NAK,     NAK,     NAK,     NAK,     NAK,     NAK,     NAK,
    NAK,  NAK,  NAK,     NAK,              KC_ESC,  KC_SPC, KC_TAB,    KC_BSPC, KC_TRNS, KC_DEL,           NAK,     NAK,     NAK,   NAK 
  )
};

